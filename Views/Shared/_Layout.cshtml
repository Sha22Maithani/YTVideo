<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YShorts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YShorts.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --yt-red: #FF0000;
            --yt-red-hover: #cc0000;
            --dark-bg: #212529;
        }
        
        .brand-logo {
            font-weight: bold;
            color: var(--yt-red) !important;
        }
        
        .btn-youtube {
            background-color: var(--yt-red);
            border-color: var(--yt-red);
            color: white;
        }
        
        .btn-youtube:hover {
            background-color: var(--yt-red-hover);
            border-color: var(--yt-red-hover);
            color: white;
        }
        
        .navbar {
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .nav-link.active {
            font-weight: bold;
            border-bottom: 2px solid var(--yt-red);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom">
            <div class="container">
                <a class="navbar-brand brand-logo" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-video me-2"></i>YShorts
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"]?.ToString() == "Transcribe" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">
                                <i class="fas fa-microphone-alt me-1"></i>Transcribe
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"]?.ToString() == "Privacy" ? "active" : "")" 
                               asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-3 bg-light">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-6 text-md-start">
                    &copy; 2025 - YShorts - All rights reserved
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://www.youtube.com/iframe_api"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
